<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" spacing="20.0" xmlns="http://javafx.com/javafx/17"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="org.example.basiccalculator.controller.CalculadoraController">

    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>

    <Label fx:id="display" text="0" alignment="CENTER_RIGHT" maxWidth="Infinity"
           style="-fx-border-color: #ddd; -fx-padding: 10; -fx-background-color: white;">
        <font>
            <Font size="30.0"/>
        </font>
    </Label>

    <GridPane hgap="10" vgap="10" alignment="CENTER">
        <Button text="7" onAction="#onNumeroClick" prefWidth="60" prefHeight="60" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
        <Button text="8" onAction="#onNumeroClick" prefWidth="60" prefHeight="60" GridPane.columnIndex="1" GridPane.rowIndex="0"/>
        <Button text="9" onAction="#onNumeroClick" prefWidth="60" prefHeight="60" GridPane.columnIndex="2" GridPane.rowIndex="0"/>
        <Button text="/" onAction="#onOperadorClick" prefWidth="60" prefHeight="60" GridPane.columnIndex="3" GridPane.rowIndex="0" style="-fx-background-color: #e0e0e0;"/>

        <Button text="4" onAction="#onNumeroClick" prefWidth="60" prefHeight="60" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
        <Button text="5" onAction="#onNumeroClick" prefWidth="60" prefHeight="60" GridPane.columnIndex="1" GridPane.rowIndex="1"/>
        <Button text="6" onAction="#onNumeroClick" prefWidth="60" prefHeight="60" GridPane.columnIndex="2" GridPane.rowIndex="1"/>
        <Button text="*" onAction="#onOperadorClick" prefWidth="60" prefHeight="60" GridPane.columnIndex="3" GridPane.rowIndex="1" style="-fx-background-color: #e0e0e0;"/>

        <Button text="1" onAction="#onNumeroClick" prefWidth="60" prefHeight="60" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
        <Button text="2" onAction="#onNumeroClick" prefWidth="60" prefHeight="60" GridPane.columnIndex="1" GridPane.rowIndex="2"/>
        <Button text="3" onAction="#onNumeroClick" prefWidth="60" prefHeight="60" GridPane.columnIndex="2" GridPane.rowIndex="2"/>
        <Button text="-" onAction="#onOperadorClick" prefWidth="60" prefHeight="60" GridPane.columnIndex="3" GridPane.rowIndex="2" style="-fx-background-color: #e0e0e0;"/>

        <Button text="C" onAction="#onOperadorClick" prefWidth="60" prefHeight="60" GridPane.columnIndex="0" GridPane.rowIndex="3" style="-fx-background-color: #ffcccc;"/>
        <Button text="0" onAction="#onNumeroClick" prefWidth="60" prefHeight="60" GridPane.columnIndex="1" GridPane.rowIndex="3"/>
        <Button text="=" onAction="#onOperadorClick" prefWidth="60" prefHeight="60" GridPane.columnIndex="2" GridPane.rowIndex="3" style="-fx-background-color: #lightblue;"/>
        <Button text="+" onAction="#onOperadorClick" prefWidth="60" prefHeight="60" GridPane.columnIndex="3" GridPane.rowIndex="3" style="-fx-background-color: #e0e0e0;"/>
    </GridPane>
</VBox>